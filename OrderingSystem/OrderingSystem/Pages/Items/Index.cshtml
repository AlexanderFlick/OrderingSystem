@page
@model OrderingSystem.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].OnHandBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].QuantityPerUnitOrdered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OnHandBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityPerUnitOrdered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
