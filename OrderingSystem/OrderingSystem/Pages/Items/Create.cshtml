@page
@model OrderingSystem.Pages.Items.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item.Price" class="control-label"></label>
                <input asp-for="Item.Price" class="form-control" />
                <span asp-validation-for="Item.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.OnHandBalance" class="control-label"></label>
                <input asp-for="Item.OnHandBalance" class="form-control" />
                <span asp-validation-for="Item.OnHandBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.QuantityPerUnitOrdered" class="control-label"></label>
                <input asp-for="Item.QuantityPerUnitOrdered" class="form-control" />
                <span asp-validation-for="Item.QuantityPerUnitOrdered" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Item.Active" /> @Html.DisplayNameFor(model => model.Item.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
